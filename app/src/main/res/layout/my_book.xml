<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/myBookImage"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Title"
                android:id="@+id/myBookTitle"
                android:textSize="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:linksClickable="true"
                android:maxWidth="200dp"
                android:textColor="#222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:id="@+id/myBookAuthor"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:textColor="#222" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/myBookPrice"
            android:textSize="20dp"
            android:textColor="#6c9444"
            android:layout_gravity="bottom" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteMyBook"
                android:background="@drawable/abc_ic_clear_material"
                android:layout_gravity="top|right"
                android:layout_marginBottom="10dp"
                android:onClick="delete" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editMyBook"
                android:background="@android:drawable/ic_menu_edit"
                android:layout_marginBottom="10dp"
                android:onClick="delete"
                android:layout_gravity="right" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>